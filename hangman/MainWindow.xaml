<Window x:Class="hangman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hangman"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="guessTextBox" HorizontalAlignment="Left" Height="23" Margin="117,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="InfoTextBlock" HorizontalAlignment="Left" Margin="120,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Enter a letter"/><LineBreak/><Run/></TextBlock>
        <Button x:Name="checkButton" Content="Check!" HorizontalAlignment="Left" Margin="124,148,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <TextBlock x:Name="wordTextBlock" HorizontalAlignment="Left" Margin="380,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock x:Name="showWordTextBlock" HorizontalAlignment="Left" Margin="370,112,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Canvas x:Name="hangmanCanvas"  HorizontalAlignment="Left" Height="139" Margin="104,173,0,0" VerticalAlignment="Top" Width="126"/>

    </Grid>
</Window>
